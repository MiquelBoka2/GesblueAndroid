<?xml version="1.0" encoding="utf-8"?>
<layout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools">
	<RelativeLayout
		android:id="@+id/activity_login"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context="com.boka2.gesblue.activities.LoginActivity"
		android:background="@color/colorFons"
		android:descendantFocusability="beforeDescendants"
		android:focusableInTouchMode="true">

		<androidx.constraintlayout.widget.ConstraintLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_alignParentEnd="true"
			android:layout_alignParentBottom="true"
			android:layout_marginEnd="0dp"
			android:layout_marginBottom="0dp">


			<androidx.constraintlayout.widget.ConstraintLayout
				android:id="@+id/constraintLayout2"
				android:layout_width="0dp"
				android:layout_height="0dp"
				app:layout_constraintBottom_toTopOf="@+id/lay_Opcions"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintVertical_bias="1.0">

				<ScrollView
					android:id="@+id/scrollView5"
					android:layout_width="0dp"
					android:layout_height="0dp"
					app:layout_constraintBottom_toBottomOf="parent"
					app:layout_constraintEnd_toEndOf="parent"
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintTop_toBottomOf="@+id/toolbar">

					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:orientation="vertical"
						android:paddingLeft="16dp"
						android:paddingRight="16dp"
						android:paddingBottom="6dp">

						<com.boka2.gesblue.customstuff.views.SGBTextView
							android:id="@+id/textViewUsuari"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginStart="4dp"
							android:layout_marginLeft="4dp"
							android:layout_marginTop="@dimen/login_screen_usuari_margin"
							android:text="@string/usuari"
							android:textColor="@color/loginTextGreen" />

						<com.boka2.sbaseobjects.views.SEditText
							android:id="@+id/editTextUsuari"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_marginBottom="10dp"
							android:hint="@string/editTextUsuariHint"
							android:inputType="textPersonName"
							android:textColor="@color/editTextFontColor"
							android:textSize="@dimen/editTextSize_login"
							app:clearDrawable="@drawable/edittext_delete" />


						<com.boka2.gesblue.customstuff.views.SGBTextView
							android:id="@+id/textViewPassword"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginStart="4dp"
							android:layout_marginLeft="4dp"
							android:layout_marginTop="10dp"
							android:text="@string/password"
							android:textColor="@color/loginTextGreen" />

						<com.boka2.sbaseobjects.views.SEditText
							android:id="@+id/editTextPassword"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_marginBottom="10dp"
							android:hint="@string/editTextPasswordHint"
							android:inputType="textPassword"
							android:textColor="@color/editTextFontColor"
							android:textSize="@dimen/editTextSize_login"
							app:clearDrawable="@drawable/edittext_delete" />

						<com.boka2.gesblue.customstuff.views.SGBTextView
							android:id="@+id/textViewConcessio"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginStart="4dp"
							android:layout_marginLeft="4dp"
							android:layout_marginTop="10dp"
							android:text="@string/concessio"
							android:textColor="@color/loginTextGreen" />

						<androidx.constraintlayout.widget.ConstraintLayout
							android:layout_width="match_parent"
							android:layout_height="match_parent"
							android:layout_marginBottom="10dp">

							<LinearLayout
								android:id="@+id/linearLayout"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:orientation="horizontal"
								android:weightSum="2"
								app:layout_constraintBottom_toBottomOf="parent"
								app:layout_constraintEnd_toEndOf="parent"
								app:layout_constraintStart_toStartOf="parent"
								app:layout_constraintTop_toTopOf="parent"
								tools:visibility="visible">

								<com.boka2.sbaseobjects.views.SEditText
									android:id="@+id/editTextConcessio"
									android:layout_width="match_parent"
									android:layout_height="match_parent"
									android:layout_marginBottom="-6dp"
									android:layout_weight="1"
									android:inputType="number"
									android:textColor="@color/editTextFontColor"
									android:textSize="@dimen/editTextSize_login"
									android:visibility="visible"
									app:clearDrawable="@drawable/edittext_delete" />

								<ViewSwitcher
									android:id="@+id/viewSwitcherLoginAnim"
									android:layout_width="match_parent"
									android:layout_height="wrap_content"
									android:layout_weight="1"
									android:inAnimation="@android:anim/fade_in"
									android:outAnimation="@anim/notifications_fade_out">

									<Button
										android:id="@+id/buttonAccepta"
										android:layout_width="match_parent"
										android:layout_height="wrap_content"
										android:layout_marginBottom="10dp"
										android:text="@string/accepta" />

									<com.boka2.sbaseobjects.views.SProgressBar
										android:id="@+id/progressBar"
										style="?android:attr/progressBarStyle"
										android:layout_width="wrap_content"
										android:layout_height="wrap_content"
										android:layout_gravity="center"
										app:progressColor="@color/taronja" />

								</ViewSwitcher>

							</LinearLayout>
						</androidx.constraintlayout.widget.ConstraintLayout>

					</LinearLayout>

				</ScrollView>

				<include
					android:id="@+id/toolbar"
					layout="@layout/toolbar"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					app:layout_constraintEnd_toEndOf="parent"
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintTop_toTopOf="parent" />

			</androidx.constraintlayout.widget.ConstraintLayout>

			<androidx.constraintlayout.widget.ConstraintLayout
				android:id="@+id/lay_Opcions"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:background="@color/colorToolBar"
				android:visibility="visible"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintHorizontal_bias="0.0"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/constraintLayout2"
				tools:visibility="visible">

				<androidx.constraintlayout.widget.ConstraintLayout
					android:id="@+id/constraintLayout3"
					android:layout_width="0dp"
					android:layout_height="110dp"
					android:layout_marginStart="16dp"
					android:layout_marginTop="16dp"
					android:layout_marginBottom="8dp"
					app:layout_constraintBottom_toTopOf="@+id/textView"
					app:layout_constraintEnd_toStartOf="@+id/btn_NetejaConcessions"
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintTop_toTopOf="parent"
					app:layout_constraintVertical_bias="1.0">

					<ImageButton
						android:id="@+id/btn_Envia_pendents"
						style="@style/Button"
						android:layout_width="0dp"
						android:layout_height="110dp"
						app:layout_constraintBottom_toBottomOf="parent"
						app:layout_constraintEnd_toEndOf="parent"
						app:layout_constraintStart_toStartOf="parent"
						app:layout_constraintTop_toTopOf="parent"
						app:srcCompat="@drawable/ic_envia" />

				</androidx.constraintlayout.widget.ConstraintLayout>

				<ImageButton
					android:id="@+id/btn_NetejaConcessions"
					style="@style/Button"
					android:layout_width="0dp"
					android:layout_height="110dp"
					android:layout_marginStart="16dp"
					android:layout_marginTop="16dp"
					android:layout_marginEnd="16dp"
					android:layout_marginBottom="8dp"
					android:background="@color/btn_desectivat"
					app:layout_constraintBottom_toTopOf="@+id/textView3"
					app:layout_constraintEnd_toStartOf="@+id/btn_EsborraTot"
					app:layout_constraintStart_toEndOf="@+id/constraintLayout3"
					app:layout_constraintTop_toTopOf="parent"
					app:srcCompat="@drawable/ic_neteja" />

				<ImageButton
					android:id="@+id/btn_EsborraTot"
					style="@style/Button"
					android:layout_width="0dp"
					android:layout_height="110dp"
					android:layout_marginTop="16dp"
					android:layout_marginEnd="16dp"
					android:layout_marginBottom="8dp"
					android:background="@color/btn_desectivat"
					app:layout_constraintBottom_toTopOf="@+id/textView4"
					app:layout_constraintEnd_toEndOf="parent"
					app:layout_constraintStart_toEndOf="@+id/btn_NetejaConcessions"
					app:layout_constraintTop_toTopOf="parent"
					app:srcCompat="@drawable/ic_esborrar_tot" />

				<ImageView
					android:id="@+id/img_cercle_contador"
					android:layout_width="32dp"
					android:layout_height="32dp"
					app:layout_constraintBottom_toBottomOf="@+id/txt_NumDenuncies"
					app:layout_constraintEnd_toEndOf="@+id/txt_NumDenuncies"
					app:layout_constraintStart_toStartOf="@+id/txt_NumDenuncies"
					app:layout_constraintTop_toTopOf="@+id/txt_NumDenuncies"
					app:srcCompat="@drawable/cercle_contador" />

				<TextView
					android:id="@+id/txt_NumDenuncies"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:fontFamily="@font/roboto"
					android:text="999"
					android:textColor="@color/color_text_toolbar"
					android:textStyle="bold"
					app:layout_constraintEnd_toEndOf="@+id/constraintLayout3"
					app:layout_constraintTop_toTopOf="@+id/constraintLayout3" />

				<TextView
					android:id="@+id/textView"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_marginBottom="16dp"
					android:fontFamily="@font/roboto"
					android:text="@string/envia_denuncies_pendents"
					android:textAlignment="center"
					android:textColor="@color/color_text_toolbar"
					android:textSize="18sp"
					app:layout_constraintBottom_toTopOf="@+id/lay_No_conexio"
					app:layout_constraintEnd_toEndOf="@+id/constraintLayout3"
					app:layout_constraintStart_toStartOf="@+id/constraintLayout3"
					app:layout_constraintTop_toBottomOf="@+id/constraintLayout3" />

				<TextView
					android:id="@+id/textView3"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:fontFamily="@font/roboto"
					android:text="@string/recarrega_dadesMayus"
					android:textAlignment="center"
					android:textColor="@color/color_text_toolbar"
					android:textSize="18sp"
					app:layout_constraintBottom_toTopOf="@+id/lay_No_conexio"
					app:layout_constraintEnd_toEndOf="@+id/btn_NetejaConcessions"
					app:layout_constraintHorizontal_bias="0.0"
					app:layout_constraintStart_toStartOf="@+id/btn_NetejaConcessions"
					app:layout_constraintTop_toTopOf="@+id/textView"
					app:layout_constraintVertical_bias="0.0" />

				<TextView
					android:id="@+id/textView4"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:fontFamily="@font/roboto"
					android:text="@string/esborra_tot"
					android:textAlignment="center"
					android:textColor="@color/color_text_toolbar"
					android:textSize="18sp"
					app:layout_constraintBottom_toTopOf="@+id/lay_No_conexio"
					app:layout_constraintEnd_toEndOf="@+id/btn_EsborraTot"
					app:layout_constraintStart_toStartOf="@+id/btn_EsborraTot"
					app:layout_constraintTop_toTopOf="@+id/textView3"
					app:layout_constraintVertical_bias="0.0" />

				<ProgressBar
					android:id="@+id/pb_Inferior"
					style="?android:attr/progressBarStyleHorizontal"
					android:layout_width="328dp"
					android:layout_height="8dp"
					android:layout_marginBottom="8dp"
					android:indeterminate="false"
					android:progressDrawable="@drawable/progressbar_custom"
					android:progressTint="#FF7043"
					android:visibility="gone"
					app:layout_constraintBottom_toBottomOf="parent"
					app:layout_constraintEnd_toEndOf="parent"
					app:layout_constraintStart_toStartOf="parent"
					tools:visibility="gone" />

				<androidx.constraintlayout.widget.ConstraintLayout
					android:id="@+id/lay_No_conexio"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:background="@color/colorToolBarFosc"
					android:visibility="gone"
					app:layout_constraintBottom_toBottomOf="parent"
					app:layout_constraintEnd_toEndOf="parent"
					app:layout_constraintHorizontal_bias="0.0"
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintTop_toBottomOf="@+id/textView"
					tools:visibility="visible">

					<TextView
						android:id="@+id/txt_no_Conxio"
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_marginStart="32dp"
						android:layout_marginTop="5dp"
						android:layout_marginBottom="5dp"
						android:elevation="60dp"
						android:text="@string/sense_conexio"
						android:textAlignment="center"
						android:textColor="#F06D6D"
						android:textStyle="bold"
						android:visibility="visible"
						app:layout_constraintBottom_toBottomOf="parent"
						app:layout_constraintEnd_toStartOf="@+id/img_creu"
						app:layout_constraintHorizontal_bias="1.0"
						app:layout_constraintStart_toStartOf="parent"
						app:layout_constraintTop_toTopOf="parent"
						tools:visibility="visible" />

					<ImageButton
						android:id="@+id/img_creu"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginEnd="32dp"
						android:background="@android:color/transparent"
						app:layout_constraintBottom_toBottomOf="parent"
						app:layout_constraintEnd_toEndOf="parent"
						app:layout_constraintStart_toEndOf="@+id/txt_no_Conxio"
						app:layout_constraintTop_toTopOf="parent"
						app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />

				</androidx.constraintlayout.widget.ConstraintLayout>

			</androidx.constraintlayout.widget.ConstraintLayout>

		</androidx.constraintlayout.widget.ConstraintLayout>


	</RelativeLayout>

</layout>
