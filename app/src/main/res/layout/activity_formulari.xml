<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" >
	<RelativeLayout
		android:id="@+id/activity_formulari"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
        tools:context="com.boka2.gesblue.activities.FormulariActivity"
        android:background="@color/colorFons"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true">

		<include
			android:id="@+id/toolbar"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			layout="@layout/toolbar" />

		<ScrollView
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_below="@+id/toolbar">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:paddingLeft="16dp"
				android:paddingRight="16dp"
				android:paddingTop="6dp"
				android:paddingBottom="6dp"
				android:orientation="vertical">

				<com.boka2.gesblue.customstuff.views.SGBTextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:id="@+id/tvMatricula"
					android:textSize="30sp"
					android:textColor="@color/textview_formulari"
                    style="@style/Base.Widget.AppCompat.EditText"
                    android:clickable="false"/>

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal">

					<LinearLayout
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:orientation="vertical"
                        android:layout_weight="1">

						<com.boka2.gesblue.customstuff.views.SGBTextView
							android:id="@+id/tvTipus"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
                            android:hint="@string/tipus"
                            android:textColorHint="@color/textview_formulari"
                            android:textSize="@dimen/editTextTextSize"
                            android:textColor="@color/textview_formulari"
                            style="@style/Base.Widget.AppCompat.Spinner.Underlined"/>

						<com.boka2.gesblue.customstuff.views.SGBTextView
							android:id="@+id/tvMarca"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
                            android:hint="@string/marca"
                            android:textColorHint="@color/textview_formulari"
                            android:textSize="@dimen/editTextTextSize"
                            android:textColor="@color/textview_formulari"
                            style="@style/Base.Widget.AppCompat.Spinner.Underlined"/>

						<com.boka2.gesblue.customstuff.views.SGBTextView
							android:id="@+id/tvModel"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
                            android:hint="@string/model"
                            android:textColorHint="@color/textview_formulari"
                            android:textSize="@dimen/editTextTextSize"
                            android:textColor="@color/textview_formulari"
                            style="@style/Base.Widget.AppCompat.Spinner.Underlined"/>

					</LinearLayout>

                    <FrameLayout
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:padding="1px"
	                    android:background="@android:color/black"
	                    android:layout_marginRight="5dp">

	                    <FrameLayout
		                    android:layout_width="wrap_content"
		                    android:layout_height="wrap_content"
		                    android:background="@android:color/white">

		                    <ImageView
			                    android:id="@+id/imageViewMarca"
			                    android:layout_width="@dimen/imageViewWidth"
			                    android:layout_height="@dimen/imageViewWidth"/>

	                    </FrameLayout>
                    </FrameLayout>

				</LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

	                <com.boka2.gesblue.customstuff.views.SGBTextView
	                    android:id="@+id/tvColor"
	                    android:layout_width="0dp"
	                    android:layout_height="wrap_content"
	                    android:hint="@string/color"
	                    android:textColorHint="@color/textview_formulari"
	                    android:layout_weight="1"
	                    android:textSize="@dimen/editTextTextSize"
	                    android:textColor="@color/textview_formulari"
	                    style="@style/Base.Widget.AppCompat.Spinner.Underlined"/>

	                <View
                        android:id="@+id/viewColor"
                        android:layout_width="137dp"
                        android:layout_height="40dp"
		                android:layout_gravity="center"/>

                </LinearLayout>

                <com.boka2.gesblue.customstuff.views.SGBTextView
                    android:id="@+id/tvInfraccio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/sancio"
                    android:textColorHint="@color/textview_formulari"
                    android:textSize="@dimen/editTextTextSize"
                    android:textColor="@color/textview_formulari"
                    style="@style/Base.Widget.AppCompat.Spinner.Underlined"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.boka2.gesblue.customstuff.views.SGBTextView
                        android:id="@+id/tvCarrer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:hint="@string/carrer"
                        android:textColorHint="@color/textview_formulari"
                        android:textSize="@dimen/editTextTextSize"
                        android:textColor="@color/textview_formulari"
                        style="@style/Base.Widget.AppCompat.Spinner.Underlined"
	                    android:lines="1"
	                    android:ellipsize="end"/>

                    <com.boka2.gesblue.customstuff.views.SGBTextView
                        android:id="@+id/tvNum"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="13"
                        android:textSize="@dimen/editTextTextSize"
                        android:textColor="@color/textview_formulari"
                        android:hint="@string/num"
                        android:textColorHint="@color/textview_formulari"
                        style="@style/Base.Widget.AppCompat.Spinner.Underlined" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
	                    android:layout_toLeftOf="@+id/btnCamera"
	                    android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
	                    android:gravity="center">

						<FrameLayout
							android:layout_width="0dip"
							android:layout_height="wrap_content"
							android:layout_weight="1">

							<ImageView
								android:id="@+id/imageViewA"
								android:layout_width="70dp"
								android:layout_height="50dp"
								android:src="@drawable/ic_add_a_photo_black_24dp" />

						</FrameLayout>

						<FrameLayout
							android:layout_width="0dip"
							android:layout_height="wrap_content"
							android:layout_weight="1">

							<ImageView
								android:id="@+id/imageViewB"
								android:layout_width="70dp"
								android:layout_height="50dp"
								android:src="@drawable/ic_add_a_photo_black_24dp" />

						</FrameLayout>

						<FrameLayout
							android:layout_width="0dip"
							android:layout_height="wrap_content"
							android:layout_weight="1">

							<ImageView
								android:id="@+id/imageViewC"
								android:layout_width="70dp"
								android:layout_height="50dp"
								android:src="@drawable/ic_add_a_photo_black_24dp" />

						</FrameLayout>

						<FrameLayout
							android:layout_width="0dp"
							android:layout_height="match_parent"
							android:layout_weight="1">

							<ImageView
								android:id="@+id/imageViewD"
								android:layout_width="70dp"
								android:layout_height="50dp"
								android:src="@drawable/ic_add_a_photo_black_24dp" />

						</FrameLayout>


					</LinearLayout>

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
	                    android:id="@+id/btnCamera"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ic_foto"
	                    android:layout_centerVertical="true"
                        android:layout_margin="6dp"
                        android:tint="@color/colorFons"
                        android:scaleType="center"
                        android:elevation="2dp"
                        app:elevation="2dp"
                        android:theme="@style/AppTheme.FAB"/>


                </RelativeLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/view_btn_comprobar"
                    android:layout_marginTop="10dp">

					<RelativeLayout
						android:id="@+id/rlButtonEnvia"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginBottom="60dp"
						android:visibility="gone"
						app:layout_constraintBottom_toBottomOf="parent"
						app:layout_constraintEnd_toEndOf="parent"
						app:layout_constraintStart_toStartOf="parent"
						app:layout_constraintTop_toTopOf="parent">

						<Button
							android:id="@+id/buttonEnvia"
							android:layout_width="match_parent"
							android:layout_height="60dp" />

						<LinearLayout
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_centerVertical="true"
							android:elevation="12dp"
							android:gravity="center"
							android:orientation="horizontal"
							app:elevation="12dp">

							<ImageView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_marginRight="5dp"
								android:src="@android:drawable/ic_menu_send"
								android:tint="@color/colorFons" />

							<com.boka2.gesblue.customstuff.views.SGBTextView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="ENVIA"
								android:textColor="@color/colorFons"
								android:textSize="18sp" />

						</LinearLayout>

					</RelativeLayout>

					<RelativeLayout
						android:id="@+id/rlButtonPrint"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:visibility="gone"
						app:layout_constraintBottom_toBottomOf="parent"
						app:layout_constraintEnd_toEndOf="parent"
						app:layout_constraintStart_toStartOf="parent"
						app:layout_constraintTop_toTopOf="parent">

						<Button
							android:id="@+id/buttonPrint"
							android:layout_width="match_parent"
							android:layout_height="60dp" />

						<LinearLayout
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_centerVertical="true"
							android:elevation="12dp"
							android:gravity="center"
							android:orientation="horizontal"
							app:elevation="12dp">

							<ImageView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_marginRight="5dp"
								android:src="@drawable/ic_impresora"
								android:tint="@color/colorFons" />

							<com.boka2.gesblue.customstuff.views.SGBTextView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="@string/imprimeix"
								android:textColor="@color/colorFons"
								android:textSize="18sp" />

						</LinearLayout>

					</RelativeLayout>

					<Button
						android:id="@+id/buttonAccepta"
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_alignParentStart="true"
						android:layout_alignParentLeft="true"
						android:layout_alignParentTop="true"
						android:text="@string/imprimeix"
						android:textSize="18sp"
						app:layout_constraintBottom_toBottomOf="parent"
						app:layout_constraintEnd_toEndOf="parent"
						app:layout_constraintStart_toEndOf="@+id/btn_Enviar"
						app:layout_constraintTop_toTopOf="parent" />

					<Button
						android:id="@+id/btn_Enviar"
						android:layout_width="wrap_content"
						android:layout_height="0dp"
						android:layout_alignParentStart="true"
						android:layout_alignParentTop="true"
						android:layout_alignParentBottom="true"
						android:layout_marginEnd="26dp"
						android:text="ENVIAR"
						android:visibility="gone"
						app:layout_constraintBottom_toBottomOf="parent"
						app:layout_constraintEnd_toStartOf="@+id/buttonAccepta"
						app:layout_constraintHorizontal_bias="0.0"
						app:layout_constraintStart_toStartOf="parent"
						app:layout_constraintTop_toTopOf="parent" />

				</androidx.constraintlayout.widget.ConstraintLayout>

			</LinearLayout>

		</ScrollView>

		<LinearLayout
			android:id="@+id/linearPreview"
			android:visibility="gone"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="#9000"
			android:layout_below="@+id/toolbar"
			android:elevation="8dp"
			app:elevation="8dp"
			android:orientation="vertical">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:background="#fff"
				android:layout_margin="24dp"
				android:elevation="20dp"
				app:elevation="20dp"
				android:orientation="vertical">

				<com.boka2.gesblue.customstuff.views.imageZoom.ImageViewTouch
					android:id="@+id/preview"
					android:layout_width="match_parent"
					android:layout_margin="4dp"
					android:layout_height="0dp"
					android:layout_weight="1"/>

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal">

					<com.boka2.sbaseobjects.views.SButton
						android:id="@+id/repetir"
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						app:customFont="@string/font_regular"
						android:background="@drawable/button_camera_preview"
						android:text="@string/foto_eliminar"
						android:textColor="@color/text_btn_camera_confirm_selector"/>

					<com.boka2.sbaseobjects.views.SButton
						android:id="@+id/confirmar"
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						app:customFont="@string/font_regular"
						android:background="@drawable/button_camera_preview"
						android:text="@string/foto_confirmar"
						android:textColor="@color/text_btn_camera_confirm_selector"/>

				</LinearLayout>

			</LinearLayout>

		</LinearLayout>

	</RelativeLayout>

</layout>
