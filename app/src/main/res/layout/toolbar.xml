<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbarBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/barra_estat">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/toolbarContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0000"
            android:elevation="0dp"
            app:elevation="0dp">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbarObject"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/colorToolBar"
                android:elevation="0dp"
                app:elevation="0dp"
                app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

        </com.google.android.material.appbar.AppBarLayout>

        <ImageView
            android:id="@+id/ic_opciones"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginEnd="16dp"
            android:background="@color/colorToolBar"
            app:layout_constraintBottom_toBottomOf="@+id/toolbarContainer"
            app:layout_constraintEnd_toEndOf="@+id/toolbarContainer"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_opciones" />

        <TextView
            android:id="@+id/txt_GesBlue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/roboto"
            android:text="GesBlue"
            android:textColor="@color/color_text_toolbar"
            android:textSize="36sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/toolbarContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_any"
            android:layout_width="67dp"
            android:layout_height="38dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="2dp"
            android:fontFamily="@font/roboto"
            android:text="2020"
            android:textColor="@color/color_text_toolbar"
            android:textSize="28sp"
            android:textStyle="italic"
            app:layout_constraintBottom_toBottomOf="@+id/txt_GesBlue"
            app:layout_constraintStart_toEndOf="@+id/txt_GesBlue" />

        <TextView
            android:id="@+id/txt_Localitzacio_Estat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/barra_estat"
            android:fontFamily="@font/roboto"
            android:textAlignment="center"
            android:textColor="@color/color_text_toolbar"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/img_unlock"
            app:layout_constraintStart_toStartOf="@+id/toolbarContainer"
            app:layout_constraintTop_toBottomOf="@+id/toolbarContainer"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/img_unlock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foregroundGravity="center"
            android:textAlignment="center"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/ic_opciones"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/ic_opciones"
            app:layout_constraintTop_toBottomOf="@+id/toolbarContainer"
            app:srcCompat="@drawable/ic_unlock"
            tools:visibility="gone" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>