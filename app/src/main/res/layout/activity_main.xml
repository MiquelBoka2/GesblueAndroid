<?xml version="1.0" encoding="utf-8"?>
<layout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
		android:id="@+id/activity_main"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context="com.boka2.gesblue.activities.MainActivity"
        android:background="@color/colorFons"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true">

		<androidx.constraintlayout.widget.ConstraintLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent">

			<include
				android:id="@+id/toolbar"
				layout="@layout/toolbar"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent" />

			<ScrollView
				android:id="@+id/scrollView6"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintHorizontal_bias="1.0"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/toolbar">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical"
					android:paddingLeft="16dp"
					android:paddingTop="6dp"
					android:paddingRight="16dp"
					android:paddingBottom="6dp"
					android:weightSum="1">


					<com.boka2.gesblue.customstuff.views.SGBTextView
						android:id="@+id/textViewMatricula"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="4dp"
						android:layout_marginTop="10dp"
						android:text="@string/matricula"
						android:textColor="@color/textview_selector" />

					<com.boka2.sbaseobjects.views.SEditText
						android:id="@+id/editTextMatricula"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:inputType="textVisiblePassword|textNoSuggestions"
						android:lines="1"
						android:maxLines="1"
						android:textColor="@color/edittext_selector"
						android:textSize="@dimen/editTextSize_login"
						app:clearDrawable="@drawable/edittext_delete" />

					<com.boka2.gesblue.customstuff.views.SGBTextView
						android:id="@+id/textViewZona"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="4dp"
						android:layout_marginTop="10dp"
						android:text="@string/zona"
						android:textColor="@color/textview_selector" />

					<com.boka2.gesblue.customstuff.views.SGBTextView
						android:id="@+id/tvZona"
						style="@style/Base.Widget.AppCompat.Spinner.Underlined"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_weight="7"
						android:ellipsize="end"
						android:hint="@string/zona"
						android:lines="1"
						android:textColor="@color/textview_formulari"
						android:textColorHint="@color/textview_formulari"
						android:textSize="@dimen/editTextTextSize" />

					<com.boka2.gesblue.customstuff.views.SGBTextView
						android:id="@+id/textViewCarrer"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="4dp"
						android:layout_marginTop="10dp"
						android:text="@string/carrer"
						android:textColor="@color/textview_selector" />

					<com.boka2.gesblue.customstuff.views.SGBTextView
						android:id="@+id/tvCarrer"
						style="@style/Base.Widget.AppCompat.Spinner.Underlined"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_weight="7"
						android:ellipsize="end"
						android:hint="@string/carrer"
						android:lines="1"
						android:textColor="@color/textview_formulari"
						android:textColorHint="@color/textview_formulari"
						android:textSize="@dimen/editTextTextSize" />

				</LinearLayout>

			</ScrollView>

			<androidx.constraintlayout.widget.ConstraintLayout
				android:id="@+id/lay_botons"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginStart="16dp"
				android:layout_marginTop="16dp"
				android:layout_marginEnd="16dp"
				android:layout_marginBottom="16dp"
				app:layout_constraintBottom_toTopOf="@+id/lay_dades"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/lay_imatges">

				<ViewSwitcher
					android:id="@+id/view_btn_comprobar"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:inAnimation="@anim/notifications_fade_in"
					android:outAnimation="@anim/notifications_fade_out"
					app:layout_constraintBottom_toBottomOf="parent"
					app:layout_constraintEnd_toEndOf="parent"
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintTop_toTopOf="parent">

					<ViewSwitcher
						android:id="@+id/viewSwitcherComprovaAnim"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:inAnimation="@android:anim/fade_in"
						android:outAnimation="@anim/notifications_fade_out"
						tools:visibility="visible">

						<Button
							android:id="@+id/buttonComprovar"
							android:layout_width="fill_parent"
							android:layout_height="wrap_content"
							android:layout_marginLeft="4dp"
							android:layout_marginTop="4dp"
							android:layout_marginRight="4dp"
							android:layout_marginBottom="4dp"
							android:text="@string/comprovar" />

						<com.boka2.sbaseobjects.views.SProgressBar
							style="?android:attr/progressBarStyle"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_gravity="center"
							app:progressColor="@color/taronja" />

					</ViewSwitcher>

					<Button
						android:id="@+id/buttonAcceptar"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:layout_marginLeft="4dp"
						android:layout_marginTop="4dp"
						android:layout_marginRight="4dp"
						android:layout_marginBottom="4dp"
						android:text="@string/accepta" />

				</ViewSwitcher>

				<LinearLayout
					android:id="@+id/ll_btn_Denuncies"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginStart="5dp"
					android:layout_marginEnd="5dp"
					android:gravity="center_vertical"
					android:orientation="horizontal"
					android:visibility="gone"
					app:layout_constraintBottom_toBottomOf="parent"
					app:layout_constraintEnd_toEndOf="parent"
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintTop_toTopOf="parent"
					tools:visibility="gone">

					<Button
						android:id="@+id/buttonNoDenunciar"
						style="@style/Button.White"
						android:layout_width="0dp"
						android:layout_height="@dimen/alcada_butons_denuncNoDenunc"
						android:layout_marginTop="3dp"
						android:layout_marginEnd="10dp"
						android:layout_marginRight="10dp"
						android:layout_marginBottom="5dp"
						android:layout_weight="1"
						android:paddingLeft="5dp"
						android:paddingRight="5dp"
						android:text="@string/noDenunciar"
						android:textSize="@dimen/button_matricula_DenuncOrNotDenunc"
						android:visibility="visible" />

					<Button
						android:id="@+id/buttonDenunciar"
						android:layout_width="0dp"
						android:layout_height="@dimen/alcada_butons_denuncNoDenunc"
						android:layout_marginTop="3dp"
						android:layout_marginBottom="5dp"
						android:layout_weight="1"
						android:text="@string/denunciar"
						android:textSize="@dimen/button_matricula_DenuncOrNotDenunc"
						android:visibility="visible" />

				</LinearLayout>
			</androidx.constraintlayout.widget.ConstraintLayout>

			<androidx.constraintlayout.widget.ConstraintLayout
				android:id="@+id/lay_dades"
				android:layout_width="0dp"
				android:layout_height="0dp"
				android:background="@color/barra_estat"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/lay_botons">

				<TextView
					android:id="@+id/txt_Info"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginBottom="8dp"
					android:fontFamily="@font/roboto"
					android:textAlignment="center"
					android:textColor="@color/color_text_toolbar"
					android:textSize="36sp"
					android:textStyle="bold"
					app:layout_constraintBottom_toBottomOf="parent"
					app:layout_constraintEnd_toEndOf="parent"
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintTop_toBottomOf="@+id/txt_Temps" />

				<TextView
					android:id="@+id/txt_Temps"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:fontFamily="@font/roboto"
					android:textAlignment="center"
					android:textColor="@color/color_text_toolbar"
					android:textSize="23sp"
					app:layout_constraintBottom_toTopOf="@+id/txt_Info"
					app:layout_constraintEnd_toEndOf="parent"
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintTop_toBottomOf="@+id/txt_estat_estacionament"
					tools:visibility="visible" />

				<TextView
					android:id="@+id/txt_estat_estacionament"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textAlignment="center"
					android:textColor="@color/color_text_toolbar"
					android:textSize="23sp"
					android:textStyle="bold"
					app:layout_constraintBottom_toTopOf="@+id/txt_Temps"
					app:layout_constraintEnd_toEndOf="parent"
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintTop_toTopOf="parent"
					tools:visibility="visible" />

			</androidx.constraintlayout.widget.ConstraintLayout>

			<androidx.constraintlayout.widget.ConstraintLayout
				android:id="@+id/lay_imatges"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:visibility="gone"
				app:layout_constraintBottom_toTopOf="@+id/lay_botons"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/scrollView6"
				tools:visibility="visible">

				<LinearLayout
					android:id="@+id/linearLayout2"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_marginStart="16dp"
					android:layout_marginEnd="8dp"
					android:orientation="horizontal"
					app:layout_constraintBottom_toBottomOf="parent"
					app:layout_constraintEnd_toStartOf="@+id/btnCamera"
					app:layout_constraintHorizontal_bias="1.0"
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintTop_toTopOf="parent">

					<ImageView
						android:id="@+id/imageViewA"
						android:layout_width="50dp"
						android:layout_height="50dp"
						android:layout_gravity="left"
						android:layout_marginEnd="8dp"
						android:src="@drawable/ic_add_a_photo_black_24dp"
						android:visibility="invisible"
						tools:visibility="invisible" />

					<ImageView
						android:id="@+id/imageViewB"
						android:layout_width="50dp"
						android:layout_height="50dp"
						android:layout_gravity="left"
						android:layout_marginEnd="8dp"
						android:src="@drawable/ic_add_a_photo_black_24dp"
						android:visibility="invisible"
						tools:visibility="invisible" />

					<ImageView
						android:id="@+id/imageViewC"
						android:layout_width="50dp"
						android:layout_height="50dp"
						android:layout_gravity="left"
						android:layout_marginEnd="8dp"
						android:src="@drawable/ic_add_a_photo_black_24dp"
						android:visibility="invisible"
						tools:visibility="invisible" />

					<ImageView
						android:id="@+id/imageViewD"
						android:layout_width="50dp"
						android:layout_height="50dp"
						android:layout_gravity="left"
						android:layout_marginEnd="8dp"
						android:src="@drawable/ic_add_a_photo_black_24dp"
						android:visibility="invisible"
						tools:visibility="invisible" />

				</LinearLayout>

				<com.google.android.material.floatingactionbutton.FloatingActionButton
					android:id="@+id/btnCamera"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginEnd="16dp"
					android:elevation="2dp"
					android:scaleType="center"
					android:src="@drawable/ic_foto"
					android:tint="#FFFFFF"
					app:backgroundTint="@color/btn_activat"
					app:elevation="2dp"
					app:layout_constraintBottom_toBottomOf="@+id/linearLayout2"
					app:layout_constraintEnd_toEndOf="parent"
					app:layout_constraintHorizontal_bias="1.0"
					app:layout_constraintStart_toEndOf="@+id/linearLayout2"
					app:layout_constraintTop_toTopOf="@+id/linearLayout2"
					tools:visibility="visible" />

			</androidx.constraintlayout.widget.ConstraintLayout>

		</androidx.constraintlayout.widget.ConstraintLayout>

	</RelativeLayout>

</layout>
